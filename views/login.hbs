{{> background}}
<div class="container d-flex">
  <form class="col-8 col-lg-3 position-absolute top-50 start-50 translate-middle p-10 m-10">
    <!-- Logo -->
    <div class="form-group d-flex justify-content-center align-items-center">
      <img height="150" src="https://res.cloudinary.com/actionfdfds/image/upload/v1621019080/Frame_129_egg2pk.png">
    </div>

    <!-- Intro -->
    <div class="form-group">
      <h3 id="draftheader" class="text-light">The Pokémon Draft</h3>
      <p id="welcome" class="text-light"> Welcome to the <strong>Pokémon Draft!</strong> Login and have fun. </p>
    </div>
    <!-- Email input -->
    <div class="form-group">
      <label class="form-label" for="form1Example1">Email address</label>
      <input type="email" id="form1Example1" placeholder="Enter Email" class="form-control email-login" />
    </div>
    <!-- Password input -->
    <div class="form-group">
      <label class="form-label" for="form1Example2">Password</label>
      <input type="password" id="form1Example2" placeholder="Enter Password" class="form-control password-login" />
    </div>
 
    <div class="form-group">
      <!-- Submit button -->
      <button id="loginbtn" type="submit" class="btn btn-dark btn-block mt-4 p-2">Log in</button>
    </div>
   <!-- Sign up section -->
    <div class="container d-flex justify-content-center">
      <!-- Signup link --><strong>
        <a class="text-light text-center" id="sign-up" href="/signup">Sign up</a></strong>
    </div>
</form>
</div>
<script src="/javascript/login.js"></script>